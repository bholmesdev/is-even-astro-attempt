<form action="/signup/" method="POST">
  <input type="text" placeholder="2, 3, 75, etc." />
  <button type="submit">Is it even?</button>
</form>

<style>
  form {
    --radius: 0.8rem;
    --slope-size: 2.1rem;
    --border-size: 1px;
    --button-color: rgb(147 51 234);

    display: grid;
    grid-template-rows: 1fr;
    grid-template-columns: 1fr var(--slope-size) auto;
    border: var(--border-size) solid gray;
    border-radius: 0.8rem;
  }

  form:focus-within {
    outline: 1px solid var(--button-color);
  }

  input,
  button[type="submit"] {
    padding: 0.8rem;
    border: 0;
  }

  input {
    grid-row: 1;
    grid-column: 1 / 3;
    border-top-left-radius: var(--radius);
    border-bottom-left-radius: var(--radius);
  }

  input:focus {
    outline: 0;
  }

  button[type="submit"] {
    grid-row: 1;
    grid-column: 2 / 4;
    margin: calc(var(--border-size) * -1);
    padding-left: var(--slope-size);
    color: white;
    font-weight: 600;
    background-color: var(--button-color);
    border-top-right-radius: var(--radius);
    border-bottom-right-radius: var(--radius);
    cursor: pointer;
    clip-path: polygon(var(--slope-size) 0, 100% 0, 100% 100%, 0 100%);
  }
</style>
